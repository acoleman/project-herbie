{%
  set classes = [
  'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {{ title_suffix }}

  <div{{ content_attributes }}>
    <div class="dcf-grid dcf-col-gap-vw dcf-row-gap-5">
      <div class="dcf-col-100% dcf-col-67%-start@md">
        {{ content.n_news_image }}
      </div>
      <div class="dcf-col-100% dcf-col-33%-end@md">
        <div class="dcf-figcaption dcf-txt-2xs dcf-italic dcf-mb-4">{{ content.n_news_image_credit }}</div>
        <div class="dcf-figcaption dcf-mb-4">{{ content.n_news_image_cutline }}</div>
      </div>
    </div>
    <div class="dcf-mt-7 dcf-w-max-xl">
      {{ content.body }}
    </div>
  </div>

</article>
